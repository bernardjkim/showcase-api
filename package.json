{
  "name": "showcase-api",
  "version": "1.0.0",
  "description": "Showcase API service",
  "author": "Bernard Kim <bernardkim.seattle@gmail.com>",
  "main": "index.js",
  "private": false,
  "engines": {
    "node": ">=8.10.0",
    "npm": ">=5.6.0"
  },
  "scripts": {
    "start": "ts-node src/index.ts",
    "start:debug": "cross-env DEBUG=showcase-api:* npm start",
    "start:prod": "tsc && node ./build/index.js",
    "lint": "esw *.js server config --color",
    "lint:tslint:fix": "tslint -c ./tslint.json './src/**/*.ts*' --fix",
    "lint:watch": "npm lint -- --watch",
    "precommit": "npm lint && npm test",
    "test": "cross-env NODE_ENV=test ./node_modules/.bin/mocha --ui bdd --reporter spec --colors server --recursive",
    "test:watch": "npm test -- --watch",
    "test:coverage": "cross-env NODE_ENV=test ./node_modules/.bin/istanbul cover _mocha -- --ui bdd --reporter spec --colors server --recursive",
    "test:check-coverage": "npm test:coverage && istanbul check-coverage",
    "report-coverage": "coveralls < ./coverage/lcov.info",
    "check": "gts check",
    "clean": "gts clean",
    "compile": "tsc -p .",
    "fix": "gts fix",
    "prepare": "npm run compile",
    "pretest": "npm run compile",
    "posttest": "npm run check"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:bernardjkim/showcase-api.git"
  },
  "keywords": [
    "express",
    "node",
    "node.js",
    "es6",
    "mocha",
    "istanbul",
    "REST",
    "API"
  ],
  "dependencies": {
    "@bernardjkim/amqplib": "^1.0.13",
    "@types/compression": "0.0.36",
    "@types/cookie-parser": "^1.4.1",
    "@types/cors": "^2.8.4",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.16.1",
    "@types/express-graphql": "^0.6.2",
    "@types/express-winston": "^3.0.1",
    "@types/graphql": "^14.2.0",
    "@types/helmet": "0.0.43",
    "@types/joi": "^14.3.3",
    "@types/jsonwebtoken": "^8.3.2",
    "@types/memory-cache": "^0.2.0",
    "@types/morgan": "^1.7.35",
    "@types/multer": "^1.3.7",
    "@types/qs": "^6.5.3",
    "bluebird": "^3.5.4",
    "body-parser": "^1.18.3",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.4",
    "cors": "^2.8.5",
    "debug": "^4.1.1",
    "dotenv": "^6.2.0",
    "express": "^4.16.4",
    "express-graphql": "^0.8.0",
    "express-winston": "^3.1.0",
    "graphql": "^14.2.1",
    "helmet": "^3.16.0",
    "http-status": "^1.3.2",
    "joi": "^14.3.1",
    "jsonwebtoken": "^8.5.1",
    "memory-cache": "^0.2.0",
    "method-override": "^3.0.0",
    "morgan": "^1.9.1",
    "multer": "^1.4.1",
    "qs": "^6.7.0",
    "tslint-config-airbnb": "^5.11.1",
    "typescript": "~3.1.0",
    "winston": "^3.2.1",
    "winston-daily-rotate-file": "^3.8.0"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.1",
    "chai": "^4.2.0",
    "commitizen": "^3.1.1",
    "coveralls": "^3.0.3",
    "cross-env": "^5.2.0",
    "cz-conventional-changelog": "^2.1.0",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-prettier": "^3.0.0",
    "eslint-watch": "^4.0.2",
    "gts": "^0.9.0",
    "husky": "^1.3.1",
    "istanbul": "^0.4.5",
    "mocha": "^5.2.0",
    "prettier": "^1.17.0",
    "supertest": "^3.4.2",
    "supertest-as-promised": "^4.0.2",
    "ts-node": "^8.1.0",
    "tslint": "^5.16.0",
    "validate-commit-msg": "^2.14.0"
  },
  "license": "MIT",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
